<Window x:Class="NewPartition"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PSX_XMB_Manager"
        mc:Ignorable="d"
        Title="Create a new partition" Height="170" Width="425" ResizeMode="CanMinimize">
    <Grid>
        <TextBox x:Name="NewPartitionNameTextBox" Margin="10,31,15,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBox x:Name="NewPartitionSizeTextBox" Margin="10,75,15,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <TextBlock Margin="10,10,15,0" TextWrapping="Wrap" Text="Please enter a name for the new partition :" VerticalAlignment="Top"/>
        <TextBlock Margin="10,54,15,0" TextWrapping="Wrap" Text="Please enter the size of the new partition in MB (number only) :" VerticalAlignment="Top"/>
        <Button x:Name="CreatePartitionButton" Content="Create partition" Margin="145,98,150,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
